<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_01"
                android:text="Příliš žluťoučký kůň úpěl ďábelské ódy"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Příliš žluťoučký kůň úpěl ďábelské ódy"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Příliš žluťoučký kůň úpěl ďábelské ódy"
                android:textAppearance="@style/MyTextAppearance" />

            <TextView
                android:id="@+id/label_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Příliš žluťoučký kůň úpěl ďábelské ódy"
                android:textAppearance="@style/MyTextAppearance" />

            <TextView
                android:id="@+id/label_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Příliš žluťoučký kůň úpěl ďábelské ódy"
                android:textAppearance="@style/MyTextAppearance" />

            <Button
                android:id="@+id/btn_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/hilds"
                android:text="Button"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

            <com.lupa.customfont.MyTextView
                android:id="@+id/mTv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Můj vlastní TextView s vlastním fontem."
                app:myFont="Albertsthal Typewriter.ttf">

            </com.lupa.customfont.MyTextView>

            <com.lupa.customfont.MyTextView
                android:id="@+id/mTv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Můj vlastní TextView s vlastním fontem."
                app:myFont="DISTInking-Regular.otf">

            </com.lupa.customfont.MyTextView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>